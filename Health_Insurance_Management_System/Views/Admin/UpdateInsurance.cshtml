@model Health_Insurance_Management_System.Models.InsuranceCompany

@{
    ViewData["Title"] = "UpdateInsurance";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<div class="app-wrapper">
    <div class="app-content pt-3 p-md-3 p-lg-4">
        <div class="container-xl">
<h1>Update Insurance</h1>

<h4>Insurance Company</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateInsurance">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="InsuranceCompanyId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label h6"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
            <label asp-for="Address" class="control-label h6"></label>
            <textarea asp-for="Address" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
            <label for="Contact Number" class="control-label h6">Contact Number</label>
            <input asp-for="ContactNumber" class="form-control" />
            <span asp-validation-for="ContactNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
            <input type="submit" value="Update" class="btn btn-primary my-3 text-white" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ViewInsurance" class="btn btn-outline-success">Back to Insurance</a>
</div>
        </div>
    </div>
</div>
