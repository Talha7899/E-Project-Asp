@model IEnumerable<Health_Insurance_Management_System.Models.Request>

    @{
        ViewData["Title"] = "ViewPoliciesRequest";
        Layout = "~/Views/Shared/_Employee.cshtml";
    }

                      <div class="app-wrapper">
                          <div class="app-content pt-3 p-md-3 p-lg-4">
                              <div class="container-xl">
                                  <h1>ViewPoliciesRequest</h1>

                                  <p>
                                      <a asp-action="Create">Create New</a>
                                  </p>
                                  <table class="table">
                                      <thead>
                                          <tr>
                                              <th>
                                                  @Html.DisplayNameFor(model => model.Status)
                                              </th>
                                              <th>
                                                  @Html.DisplayNameFor(model => model.Employee)
                                              </th>
                                              <th>
                                                  @Html.DisplayNameFor(model => model.InsuranceCompany)
                                              </th>
                                              <th>
                                                  @Html.DisplayNameFor(model => model.Policy)
                                              </th>
                                              <th></th>
                                          </tr>
                                      </thead>
                                      <tbody>
                                          @foreach (var item in Model)
                                          {
                                              <tr>
                                                  <td>
                                                      @Html.DisplayFor(modelItem => item.Status)
                                                  </td>
                                                  <td>
                                                      @Html.DisplayFor(modelItem => item.Employee.Name)
                                                  </td>
                                                  <td>
                                @Html.DisplayFor(modelItem => item.InsuranceCompany.Name)
                                                  </td>
                                                  <td>
                                                      @Html.DisplayFor(modelItem => item.Policy.PolicyName)
                                                  </td>
                                                  <td>
                                                      <a asp-action="EditPoliciesRequest" asp-route-id="@item.RequestId">Edit</a> |
                                                      <a asp-action="Details" asp-route-id="@item.RequestId">Details</a> |
                                                      <a asp-action="Delete" asp-route-id="@item.RequestId">Delete</a>
                                                  </td>
                                              </tr>
                                          }
                                      </tbody>
                                  </table>
                              </div>
                          </div>
                      </div>