@model IEnumerable<Health_Insurance_Management_System.Models.Policy>

@{
    ViewData["Title"] = "ViewPolicy";
    Layout = "~/Views/Shared/_Admin.cshtml";
}
<div class="app-wrapper">
    <div class="app-content pt-3 p-md-3 p-lg-4">
        <div class="container-xl">
<h1>View All Policies</h1>

<p>
<a asp-action="AddPolicy" class="btn btn-primary text-white float-end mb-2">Add New Policy</a>
</p>
<table class="table table-bordered table-hover table-dark text-center">
    <thead>
        <tr>
            <th>Policy Name</th>
            <th>Company Details</th>
            <th>Company Name</th>
            <th>Address</th>
            <th>Contact No.</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PolicyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CoverageDetails)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InsuranceCompany.Name)
            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.InsuranceCompany.Address)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.InsuranceCompany.ContactNumber)
                            </td>
            <td>
                <a asp-action="UpdatePolicy" class="btn btn-sm btn-warning my-2" asp-route-id="@item.PolicyId">Edit</a>
                <a asp-action="DeletePolicy" class="btn btn-sm btn-danger" asp-route-id="@item.PolicyId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
        </div>
    </div>
</div>